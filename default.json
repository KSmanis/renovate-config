{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "regexManagers:dockerfileVersions",
    "regexManagers:githubActionsVersions",
    ":enablePreCommit"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-tags"
      ],
      "matchPackageNames": [
        "SonarSource/sonarcloud-github-action",
        "shellcheck-py/shellcheck-py"
      ],
      "versioning": "loose"
    },
    {
      "matchDatasources": [
        "github-tags"
      ],
      "matchPackageNames": [
        "psf/black"
      ],
      "versioning": "pep440"
    },
    {
      "matchDepTypes": [
        "action"
      ],
      "matchPackageNames": [
        "github/super-linter"
      ],
      "minimumReleaseAge": "1 day"
    },
    {
      "matchDatasources": [
        "pypi"
      ],
      "matchPackageNames": [
        "pygit2"
      ],
      "minimumReleaseAge": "1 day"
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "matchManagers": [
        "docker-compose",
        "dockerfile",
        "github-actions",
        "pre-commit",
        "regex"
      ]
    },
    {
      "automerge": false,
      "matchManagers": [
        "docker-compose",
        "dockerfile",
        "github-actions",
        "regex"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "automerge": false,
      "groupName": "poetry",
      "matchDatasources": [
        "github-tags"
      ],
      "matchDepNames": [
        "python-poetry/poetry"
      ]
    },
    {
      "automerge": false,
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": [
        "alpine"
      ],
      "matchUpdateTypes": [
        "minor"
      ]
    }
  ],
  "pyenv": {
    "enabled": false
  }
}
