{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "regexManagers:dockerfileVersions",
    "regexManagers:githubActionsVersions",
    ":enablePreCommit"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-tags"
      ],
      "matchPackageNames": [
        "psf/black",
        "shellcheck-py/shellcheck-py"
      ],
      "versioning": "loose"
    },
    {
      "matchDepTypes": [
        "action"
      ],
      "matchPackageNames": [
        "github/super-linter"
      ],
      "prCreation": "not-pending",
      "stabilityDays": 1
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "matchManagers": [
        "docker-compose",
        "dockerfile",
        "github-actions",
        "pre-commit"
      ]
    },
    {
      "automerge": false,
      "groupName": "poetry",
      "matchDatasources": [
        "github-tags"
      ],
      "matchDepNames": [
        "python-poetry/poetry"
      ]
    }
  ]
}
